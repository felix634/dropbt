---
// IMPORTS CORRECTED: 4 levels deep requires '../../../'
import MainLayout from '../../../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={`${t('header.communication_design')} | ${t('header.references')}`}>
    <section class="container mx-auto px-6 py-20">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-6 animate-fade-in-down">
            {t('header.references')}
        </h1>
        <p class="text-lg text-gray-600 mb-10 animate-fade-in-up-delay">
            A selection of our successful projects and satisfied clients.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
            <div class="bg-gray-100 p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 animate-fade-in-up">
                <h2 class="text-xl font-semibold text-drop-red mb-2">Client A: Corporate Rebrand</h2>
                <p class="text-gray-700">Executed a full brand identity overhaul, resulting in a 25% increase in market recognition.</p>
            </div>
            <div class="bg-gray-100 p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 animate-fade-in-up-delay">
                <h2 class="text-xl font-semibold text-drop-red mb-2">Client B: E-Learning Platform</h2>
                <p class="text-gray-700">Developed 10 specialized language modules, improving user completion rates by 15%.</p>
            </div>
            <div class="bg-gray-100 p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 animate-fade-in-up-delay-2">
                <h2 class="text-xl font-semibold text-drop-red mb-2">Client C: Digital Campaign</h2>
                <p class="text-gray-700">Designed and managed a successful digital campaign focused on social media visibility.</p>
            </div>
        </div>
    </section>
</MainLayout>