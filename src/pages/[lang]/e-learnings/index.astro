---
// src/pages/[lang]/e-learnings/index.astro

// IMPORTS CORRECTED: 4 levels deep requires '../../../'
import MainLayout from '../../../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const submenuItems = [
    { title: t('header.language_teaching'), href: `/${lang}/e-learnings/language-teaching` },
    { title: t('header.learning_types'), href: `/${lang}/e-learnings/learning-types` }
];
---

<MainLayout title={t('header.e_learnings')}>
    <section class="bg-gray-100 py-16">
        <div class="container mx-auto px-6 text-center animate-fade-in-down">
            <h1 class="text-5xl font-extrabold text-drop-red mb-3">
                {t('header.e_learnings')}
            </h1>
            <p class="text-xl text-gray-700">
                Designing digital education that is engaging, accessible, and leads to measurable knowledge retention.
            </p>
        </div>
    </section>

    <section class="container mx-auto px-6 py-20">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-12 animate-fade-in-up">
            Our E-Learning Focus
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-4xl mx-auto">
            {submenuItems.map((item, index) => (
                <a 
                    href={item.href}
                    class={`block p-8 bg-white rounded-lg shadow-xl hover:shadow-2xl transition-all duration-300 border-l-4 border-drop-red hover:bg-red-50 transform hover:scale-[1.02] opacity-0`}
                    style={`animation: fadeInUp 0.8s ease-out ${0.3 * index}s forwards;`}
                >
                    <h3 class="text-2xl font-semibold text-gray-800 mb-3">{item.title}</h3>
                    <p class="text-gray-600">
                        {/* Placeholder descriptions for quick view */}
                        {item.title === t('header.language_teaching') ? "Bespoke digital language courses for rapid and effective professional development." : ""}
                        {item.title === t('header.learning_types') ? "Content tailored to suit Visual, Auditory, and Kinesthetic learning styles." : ""}
                    </p>
                </a>
            ))}
        </div>
    </section>
</MainLayout>