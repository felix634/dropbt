---
// IMPORTS CORRECTED: 4 levels deep requires '../../../'
import MainLayout from '../../../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={`${t('header.e_learnings')} | ${t('header.language_teaching')}`}>
    <section class="container mx-auto px-6 py-20">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-6 animate-fade-in-down">
            {t('header.language_teaching')}
        </h1>
        <p class="text-lg text-gray-600 mb-10 animate-fade-in-up-delay">
            Interactive, personalized language courses utilizing modern pedagogical methods for rapid and effective learning.
        </p>

        <div class="bg-white p-8 rounded-lg shadow-xl animate-fade-in-up-delay-2">
            <h2 class="text-2xl font-semibold text-drop-red mb-4">Key Features</h2>
            <ul class="list-disc list-inside text-gray-700 space-y-3 text-lg">
                <li>**Bespoke curriculum design:** Tailored to industry and proficiency level.</li>
                <li>**Gamified learning modules:** Increasing motivation and engagement through challenges and rewards.</li>
                <li>**Real-time progress tracking:** Allowing learners and managers to monitor development.</li>
                <li>**Multilingual content support:** We build courses for English, German, and Hungarian languages.</li>
            </ul>
        </div>
    </section>
</MainLayout>