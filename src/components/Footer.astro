---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gray-800 text-gray-300 py-10 animate-fade-in-up">
  <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="mb-6 md:mb-0">
      <h3 class="text-xl font-semibold text-white mb-4">Drop BT.</h3>
      <p>{t('footer.company_name')}</p>
      <p>{t('footer.address')}</p>
      <p>{t('footer.phone')}</p>
      <p>Email: <a href="mailto:info@drop-bt.eu" class="text-red-400 hover:text-red-300 transition-colors duration-300">{t('footer.email')}</a></p>
    </div>
    <div class="mb-6 md:mb-0">
      <h3 class="text-xl font-semibold text-white mb-4">Quick Links</h3>
      <ul>
        <li><a href={`/${lang}/`} class="hover:text-red-400 transition-colors duration-300">{t('header.home')}</a></li>
        <li><a href={`/${lang}/about-us`} class="hover:text-red-400 transition-colors duration-300">{t('header.about_us')}</a></li>
